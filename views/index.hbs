
  <div class="card d-flex flex-column " id="card">
    <div class="header mt-3">
      <h1>咖啡店集點卡</h1>
    </div>
    <div class="container">
      {{#if success_messages}}
        <div class="alert alert-success" role="alert" style="margin: 30px 0 ;">
          {{success_messages}}
        </div>
      {{/if}}
      {{#if error_messages}}
        <div class="alert alert-danger" role="alert" style="margin: 30px 0 ;">
          {{error_messages}}
        </div>
      {{/if}}
    
      {{{body}}}
    </div>
